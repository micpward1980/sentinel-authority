      <!-- 10 General -->
      <div id="general" class="section hud-frame" style="margin-top:var(--space-3);"><i></i>
        <div style="display:flex;align-items:center;gap:12px;margin-bottom:16px;"><span class="hud-num">10</span><span class="hud-label">GENERAL PROVISIONS</span></div>
