    <!-- HERO -->
    <section class="hero">
      <!-- Full-viewport canvas -->
      <canvas id="hero-canvas" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1;"></canvas>
      
      <!-- Hero Content -->
      <div id="hero-text" class="hero-content-bottom" style="position: absolute; bottom: 3vh; left: 0; right: 0; z-index: 10; text-align: center; padding: 0 24px; display: flex; flex-direction: column; align-items: center;">
        
        <h1 style="font-family: var(--serif); font-size: clamp(28px, 5vw, 50px); font-weight: 200; line-height: 1.15; margin-bottom: 8px; letter-spacing: -0.02em; color: #fff; max-width: 700px;">
          Operational Design Domain<br><span class="accent" style="color: #c4b8e8; font-style: italic;">Conformance</span>
        </h1>
        
        <p style="font-size: clamp(13px, 1.8vw, 16px); color: rgba(255,255,255,0.65); max-width: 500px; margin: 0 auto 14px; line-height: 1.5;">
          Autonomy, enforced.
        </p>
        
        <!-- CTA Buttons -->
        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          <a class="btn primary" href="https://app.sentinelauthority.org" style="display: inline-flex; align-items: center; gap: 10px; padding: 12px 22px; background: linear-gradient(135deg, #5B4B8A 0%, #7B6BAA 100%); box-shadow: 0 4px 24px rgba(91,75,138,0.4);">
            Get Started
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </a>
          <a class="btn" href="#envelo" style="display: inline-flex; align-items: center; gap: 8px;">
            How It Works
          </a>
        </div>
        <p class="hero-disclaimer" style="font-family: var(--mono); font-size: 9px; color: rgba(255,255,255,0.2); letter-spacing: 0.3px; margin: 10px 0 0; max-width: 500px; line-height: 1.5;">
          Independent conformance determination. Not a regulator. ODDC does not attest to safety or regulatory compliance.
        </p>
      </div>
      

      
      <!-- Disclaimer at bottom -->

      
      <script>
        (function() {
  var c = document.getElementById('hero-canvas');
  if (!c) return;
  var ctx = c.getContext('2d');
  var dpr = window.devicePixelRatio || 1;
  var W = 0, H = 0;

  var GREEN = [92,214,133];
  var PURPLE = [157,140,207];
  var RED = [214,92,92];

  var cx, cy, radius;
  var agents = [];
  var AGENT_COUNT = window.innerWidth < 768 ? 14 : 28;
  var telemetry = [];
  var lastTel = 0;
  var boundaryPulses = [];

  var dataLabels = [
    'speed:62.4mph','lat:30.412\u00B0N','lng:97.741\u00B0W','heading:247\u00B0',
    'lane:2','lidar:clean','visibility:0.8mi','brake_dist:184ft',
    'following:2.3s','steering:0.4\u00B0','throttle:34%','yaw_rate:0.02\u00B0/s',
    'road:dry','temp:71\u00B0F','wind:8mph_NW','grade:1.2%',
    'obj_count:14','ped_count:0','signal:green','conf:0.994',
    'gps_fix:RTK','imu:nominal','cam_8:clear','radar:12_trk'
  ];

  function rgb(col,a){ return 'rgba('+col[0]+','+col[1]+','+col[2]+','+a+')'; }

  function heroH() {
    var el = document.getElementById('hero-text');
    if (!el) return 150;
    var rect = el.getBoundingClientRect();
    return window.innerHeight - rect.top + 20;
  }

  function resize() {
    W = c.offsetWidth || window.innerWidth;
    H = c.offsetHeight || window.innerHeight;
    c.width = W * dpr;
    c.height = H * dpr;
    ctx.setTransform(dpr,0,0,dpr,0,0);

    var hh = heroH();
    var avail = H - hh;
    cx = W * 0.5;
    cy = avail * 0.48;
    radius = Math.min(W * 0.25, avail * 0.34);
    if (radius < 60) radius = 60;
  }

  function initAgents() {
    agents = [];
    AGENT_COUNT = window.innerWidth < 768 ? 14 : 28;
    for (var i = 0; i < AGENT_COUNT; i++) {
      var a = Math.random() * Math.PI * 2;
      var isOutlier = i < 4;
      var r = isOutlier ? (0.5 + Math.random()*0.35) * radius : Math.random() * radius * 0.5;
      agents.push({
        x: cx + Math.cos(a) * r,
        y: cy + Math.sin(a) * r,
        vx: (Math.random()-0.5)*0.6,
        vy: (Math.random()-0.5)*0.6,
        size: 1.5 + Math.random()*1.8,
        phase: Math.random()*Math.PI*2,
        drift: 0.002 + Math.random()*0.003,
        softMax: isOutlier ? radius*0.88 : radius*0.5,
        isOutlier: isOutlier
      });
    }
  }

  function updateAgents(dt) {
    for (var i=0; i<agents.length; i++) {
      var a = agents[i];
      a.phase += a.drift * dt;

      a.vx += Math.cos(a.phase)*0.015*dt*0.1;
      a.vy += Math.sin(a.phase*1.3)*0.015*dt*0.1;

      var dx = a.x - cx, dy = a.y - cy;
      var dist = Math.sqrt(dx*dx+dy*dy) || 1;
      var nx = dx/dist, ny = dy/dist;

      if (!a.isOutlier && dist > a.softMax) {
        var over = (dist - a.softMax) / radius;
        a.vx -= nx * over * 0.004 * dt;
        a.vy -= ny * over * 0.004 * dt;
      }
      if (a.isOutlier) {
        a.vx += nx * 0.0008 * dt * 0.1;
        a.vy += ny * 0.0008 * dt * 0.1;
      }

      a.x += a.vx*dt*0.06;
      a.y += a.vy*dt*0.06;

      dx = a.x - cx; dy = a.y - cy;
      dist = Math.sqrt(dx*dx+dy*dy);
      var maxR = radius*0.88;
      if (dist > maxR) {
        var ang = Math.atan2(dy,dx);
        a.x = cx+Math.cos(ang)*maxR;
        a.y = cy+Math.sin(ang)*maxR;
        var dot = a.vx*Math.cos(ang)+a.vy*Math.sin(ang);
        a.vx -= 2*dot*Math.cos(ang);
        a.vy -= 2*dot*Math.sin(ang);
        a.vx *= 0.4; a.vy *= 0.4;
        boundaryPulses.push({angle:ang, alpha:0.6, spread:0});
      }
      a.vx *= 0.997; a.vy *= 0.997;
    }
  }

  function drawBoundary(now) {
    var g1 = ctx.createRadialGradient(cx,cy,radius*0.8, cx,cy,radius*1.2);
    g1.addColorStop(0, rgb(GREEN,0));
    g1.addColorStop(0.5, rgb(GREEN,0.03));
    g1.addColorStop(1, rgb(GREEN,0));
    ctx.fillStyle = g1;
    ctx.beginPath(); ctx.arc(cx,cy,radius*1.2,0,Math.PI*2); ctx.fill();

    ctx.beginPath(); ctx.arc(cx,cy,radius,0,Math.PI*2);
    ctx.strokeStyle = rgb(GREEN,0.18);
    ctx.lineWidth = 1.5; ctx.stroke();

    ctx.save(); ctx.translate(cx,cy); ctx.rotate(now*0.00015);
    ctx.beginPath(); ctx.arc(0,0,radius*0.92,0,Math.PI*2);
    ctx.setLineDash([2,7]);
    ctx.strokeStyle = rgb(GREEN,0.08);
    ctx.lineWidth = 1; ctx.stroke();
    ctx.setLineDash([]); ctx.restore();

    ctx.font='400 9px "IBM Plex Mono"';
    ctx.fillStyle=rgb(GREEN,0.4);
    ctx.textAlign='center';
    ctx.fillText('ODD BOUNDARY',cx,cy-radius-28);
  }

  function drawPulses() {
    for (var i=boundaryPulses.length-1;i>=0;i--) {
      var p=boundaryPulses[i];
      p.alpha -= 0.012; p.spread += 0.6;
      if (p.alpha<=0) {boundaryPulses.splice(i,1);continue;}
      var bx=cx+Math.cos(p.angle)*radius, by=cy+Math.sin(p.angle)*radius;
      var g=ctx.createRadialGradient(bx,by,0,bx,by,p.spread+12);
      g.addColorStop(0,rgb(RED,p.alpha*0.5));
      g.addColorStop(1,rgb(RED,0));
      ctx.fillStyle=g;
      ctx.beginPath(); ctx.arc(bx,by,p.spread+12,0,Math.PI*2); ctx.fill();
    }
  }

  function drawAgents() {
    for (var i=0;i<agents.length;i++) {
      var a = agents[i];
      var dx=a.x-cx, dy=a.y-cy;
      var dist=Math.sqrt(dx*dx+dy*dy);
      var edge=dist/(radius*0.88);
      var r,g,b,al;
      if (edge>0.75) {
        var t=(edge-0.75)/0.25;
        r=92+(214-92)*t; g=214+(92-214)*t; b=133+(92-133)*t; al=0.55+t*0.35;
      } else {
        r=92; g=214; b=133; al=0.5;
      }
      var col=[Math.round(r),Math.round(g),Math.round(b)];

      var gl=ctx.createRadialGradient(a.x,a.y,0,a.x,a.y,a.size*3.5);
      gl.addColorStop(0,rgb(col,al*0.25));
      gl.addColorStop(1,rgb(col,0));
      ctx.fillStyle=gl;
      ctx.beginPath(); ctx.arc(a.x,a.y,a.size*3.5,0,Math.PI*2); ctx.fill();

      ctx.beginPath(); ctx.arc(a.x,a.y,a.size,0,Math.PI*2);
      ctx.fillStyle=rgb(col,al);
      ctx.fill();
    }
  }

  function spawnTelemetry(now) {
    if (now-lastTel>280) {
      lastTel=now;
      var label = dataLabels[Math.floor(Math.random()*dataLabels.length)];
      var side = Math.random()>0.5?1:-1;
      telemetry.push({
        text:label,
        x: cx+side*(radius+35+Math.random()*60),
        y: cy-radius*0.5+Math.random()*radius,
        tx: cx+(Math.random()-0.5)*radius*0.5,
        ty: cy+(Math.random()-0.5)*radius*0.5,
        alpha:1, prog:0, side:side
      });
    }
  }

  function drawTelemetry() {
    for (var i=telemetry.length-1;i>=0;i--) {
      var t=telemetry[i];
      t.prog+=0.007;
      if(t.prog>1) t.alpha-=0.025;
      if(t.alpha<=0){telemetry.splice(i,1);continue;}

      var p=Math.min(t.prog,1);
      var e=p<0.5?2*p*p:1-Math.pow(-2*p+2,2)/2;
      var px=t.x+(t.tx-t.x)*e, py=t.y+(t.ty-t.y)*e;

      ctx.beginPath(); ctx.moveTo(t.x,t.y); ctx.lineTo(px,py);
      ctx.strokeStyle=rgb(GREEN,t.alpha*0.1);
      ctx.lineWidth=0.5; ctx.stroke();

      if(t.alpha>0.3){
        ctx.font='300 8px "IBM Plex Mono"';
        ctx.fillStyle=rgb(GREEN,t.alpha*0.35);
        ctx.textAlign=t.side>0?'left':'right';
        ctx.fillText(t.text,t.x,t.y);
      }

      ctx.beginPath(); ctx.arc(px,py,1.5,0,Math.PI*2);
      ctx.fillStyle=rgb(GREEN,t.alpha*0.5);
      ctx.fill();
    }
  }

  function drawHash(now) {
    var x = W<600 ? W-12 : cx+radius+55;
    var startY = cy-radius*0.4;
    var chars='0123456789abcdef';
    ctx.font='300 7px "IBM Plex Mono"';
    ctx.textAlign='right';
    for(var i=0;i<7;i++){
      var hash='';
      var seed=Math.floor(now*0.0008)+i*7;
      for(var j=0;j<14;j++) hash+=chars[(seed*(j+1)*31+j*17)%16];
      ctx.fillStyle=rgb(PURPLE,0.22-i*0.025);
      ctx.fillText(hash,x,startY+i*12);
    }
    ctx.fillStyle=rgb(PURPLE,0.22);
    ctx.fillText('HASH CHAIN \u25B8',x,startY-10);
  }

  var lastTime=0;
  function animate(now) {
    if(!lastTime) lastTime=now;
    var dt=now-lastTime; lastTime=now;
    ctx.clearRect(0,0,W,H);

    updateAgents(dt);
    spawnTelemetry(now);

    drawBoundary(now);
    drawPulses();
    drawTelemetry();
    drawAgents();
    drawHash(now);

    ctx.restore();
    requestAnimationFrame(animate);
  }

  window.addEventListener('resize', function(){ resize(); initAgents(); });
  resize();
  initAgents();
  requestAnimationFrame(animate);
})();
      </script>
    </section>


    <!-- ENVELO -->
    <section id="envelo" class="section">
      <div class="section-head reveal">
        <div>
          <span class="section-label">THE ENFORCEMENT LAYER</span>
          <h2 class="section-title">ENVELO</h2>
          <p class="section-lead">
            Enforced Non-Violable Execution-Limit Override
          </p>
        </div>
      </div>

      <!-- Mechanism Flow Diagram - Animated Canvas v2 -->
      <div class="reveal" style="display: flex; justify-content: center; margin: 0 auto var(--space-4); max-width: 880px;">
        <div style="width: 100%;">
          <canvas id="envelo-canvas" style="width: 100%; display: block;"></canvas>
        </div>
      </div>
      <script>
      (function() {
        var c = document.getElementById('envelo-canvas');
        if (!c) return;
        var ctx = c.getContext('2d');
        var dpr = window.devicePixelRatio || 1;
        var W = 0, H = 0;
        var packets = [];
        var bursts = [];
        var stats = { total: 0, exec: 0, block: 0 };
        var lastSpawn = 0;
        var nextDelay = 1500;
        var enveloGlow = 0;
        var gateAngle = 0; // gate rotation state
        var gateTarget = 0;
        var connPulses = []; // connection line pulses
        var scanLines = []; // ENVELO internal scan lines

        var dataLabels = [
          'speed: 47mph', 'dose: 120mg', 'alt: 3200ft', 'temp: 72°F',
          'lat: 30.41°N', 'load: 82%', 'rpm: 2400', 'psi: 34.2',
          'freq: 60Hz', 'vol: 240mL', 'rate: 12/min', 'torque: 88Nm',
          'depth: 15m', 'flow: 3.2L/s', 'angle: 12.5°', 'pH: 7.2',
          'lux: 450', 'dB: 78', 'g-force: 1.2', 'voltage: 3.3V'
        ];

        function resize() {
          var r = c.parentElement.getBoundingClientRect();
          W = r.width;
          H = W < 550 ? 390 : 310;
          c.width = W * dpr;
          c.height = H * dpr;
          c.style.height = H + 'px';
          ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
        }

        function rr(x, y, w, h, r) {
          ctx.beginPath();
          ctx.moveTo(x+r,y);
          ctx.arcTo(x+w,y,x+w,y+h,r);
          ctx.arcTo(x+w,y+h,x,y+h,r);
          ctx.arcTo(x,y+h,x,y,r);
          ctx.arcTo(x,y,x+w,y,r);
          ctx.closePath();
        }

        function lerp(a,b,t) { return a+(b-a)*t; }
        function ease(t) { return t<0.5?2*t*t:-1+(4-2*t)*t; }
        function clamp(t) { return Math.min(Math.max(t,0),1); }

        function layout() {
          var mob = W < 550;
          if (mob) {
            var cx = W / 2;
            return {
              model:   {x:cx, y:50,  w:80, h:80},
              envelo:  {x:cx, y:158, w:110,h:110},
              gate:    {x:cx, y:258, w:68, h:68},
              execute: {x:cx-60, y:338, w:92,h:32},
              blocked: {x:cx+60, y:338, w:92,h:32},
              mob: true
            };
          }
          var cy = H/2 - 10;
          var m = W*0.05;
          var s = (W - m*2) / 5;
          return {
            model:   {x:m+s*0.5, y:cy, w:90, h:90},
            envelo:  {x:m+s*1.85,y:cy, w:120,h:120},
            gate:    {x:m+s*3.1, y:cy, w:72, h:72},
            execute: {x:m+s*4.3, y:cy-36, w:100,h:34},
            blocked: {x:m+s*4.3, y:cy+36, w:100,h:34},
            mob: false
          };
        }

        function getConnPoints(L) {
          if (!L.mob) {
            return [
              {ax:L.model.x+L.model.w/2, ay:L.model.y, bx:L.envelo.x-L.envelo.w/2, by:L.envelo.y, label:'ACTION'},
              {ax:L.envelo.x+L.envelo.w/2, ay:L.envelo.y, bx:L.gate.x-L.gate.w/2, by:L.gate.y, label:'VERDICT'},
              {ax:L.gate.x+L.gate.w/2, ay:L.gate.y, bx:L.execute.x-L.execute.w/2, by:L.execute.y, label:''},
              {ax:L.gate.x+L.gate.w/2, ay:L.gate.y, bx:L.blocked.x-L.blocked.w/2, by:L.blocked.y, label:''}
            ];
          }
          return [
            {ax:L.model.x, ay:L.model.y+L.model.h/2, bx:L.envelo.x, by:L.envelo.y-L.envelo.h/2, label:''},
            {ax:L.envelo.x, ay:L.envelo.y+L.envelo.h/2, bx:L.gate.x, by:L.gate.y-L.gate.h/2, label:''},
            {ax:L.gate.x, ay:L.gate.y+L.gate.h/2, bx:L.execute.x, by:L.execute.y-L.execute.h/2, label:''},
            {ax:L.gate.x, ay:L.gate.y+L.gate.h/2, bx:L.blocked.x, by:L.blocked.y-L.blocked.h/2, label:''}
          ];
        }

        function drawConn(cp, col, alpha) {
          ctx.beginPath();
          ctx.moveTo(cp.ax,cp.ay); ctx.lineTo(cp.bx,cp.by);
          ctx.strokeStyle = col+alpha+')';
          ctx.lineWidth = 1.5;
          ctx.stroke();
          var ang = Math.atan2(cp.by-cp.ay,cp.bx-cp.ax);
          ctx.beginPath();
          ctx.moveTo(cp.bx,cp.by);
          ctx.lineTo(cp.bx-6*Math.cos(ang-0.4),cp.by-6*Math.sin(ang-0.4));
          ctx.lineTo(cp.bx-6*Math.cos(ang+0.4),cp.by-6*Math.sin(ang+0.4));
          ctx.closePath();
          ctx.fillStyle = col+(Math.min(parseFloat(alpha)*3,0.5))+')';
          ctx.fill();
          if (cp.label) {
            var mx=(cp.ax+cp.bx)/2, my=(cp.ay+cp.by)/2-12;
            ctx.font = '8px monospace';
            ctx.textAlign = 'center';
            ctx.fillStyle = col+'0.4)';
            ctx.fillText(cp.label, mx, my);
          }
        }

        function drawConnPulses(cps, time) {
          for (var i=connPulses.length-1;i>=0;i--) {
            var cp = connPulses[i];
            cp.t += cp.speed;
            if (cp.t > 1.3) { connPulses.splice(i,1); continue; }
            var ct = clamp(cp.t);
            var conn = cps[cp.conn];
            if (!conn) continue;
            var px = lerp(conn.ax,conn.bx,ct);
            var py = lerp(conn.ay,conn.by,ct);
            var a = ct<0.1 ? ct*10 : (ct>0.9 ? (1-ct)*10 : 1);
            ctx.beginPath();
            ctx.arc(px,py,2,0,Math.PI*2);
            ctx.fillStyle=cp.col+a*0.6+')';
            ctx.shadowColor=cp.col+'0.4)';
            ctx.shadowBlur=8;
            ctx.fill();
            ctx.shadowBlur=0;
          }
        }

        function drawNode(n, label, bCol, fCol, time) {
          var x=n.x-n.w/2, y=n.y-n.h/2;
          rr(x,y,n.w,n.h,10);
          ctx.fillStyle = fCol;
          ctx.fill();
          ctx.strokeStyle = bCol;
          ctx.lineWidth = label==='ENVELO'?2:1;
          ctx.stroke();

          if (label==='MODEL') {
            var s=8,g=3,ox=n.x-(s+g/2),oy=n.y-22;
            for(var r=0;r<2;r++) for(var cc=0;cc<2;cc++){
              rr(ox+cc*(s+g),oy+r*(s+g),s,s,2);
              ctx.strokeStyle='rgba(92,214,133,0.5)';ctx.lineWidth=1;ctx.stroke();
            }
          } else if (label==='ENVELO') {
            // Scan lines - always subtly visible, brighter during processing
            var scanAlpha = 0.06 + enveloGlow*0.12;
            var bandAlpha = 0.025 + enveloGlow*0.04;
            ctx.save();
            ctx.beginPath();
            rr(x+2,y+2,n.w-4,n.h-4,8);
            ctx.clip();
            var scanY = n.y - n.h/2 + (time*40 % n.h);
            ctx.beginPath();
            ctx.moveTo(x+8, scanY);
            ctx.lineTo(x+n.w-8, scanY);
            ctx.strokeStyle = 'rgba(157,140,207,'+scanAlpha+')';
            ctx.lineWidth = 1;
            ctx.stroke();
            var sg = ctx.createLinearGradient(x,scanY-8,x,scanY+8);
            sg.addColorStop(0,'rgba(157,140,207,0)');
            sg.addColorStop(0.5,'rgba(157,140,207,'+bandAlpha+')');
            sg.addColorStop(1,'rgba(157,140,207,0)');
            ctx.fillStyle = sg;
            ctx.fillRect(x+4,scanY-8,n.w-8,16);
            var scanY2 = n.y - n.h/2 + ((time*40+n.h/2) % n.h);
            ctx.beginPath();
            ctx.moveTo(x+8, scanY2);
            ctx.lineTo(x+n.w-8, scanY2);
            ctx.strokeStyle = 'rgba(157,140,207,'+(scanAlpha*0.5)+')';
            ctx.lineWidth = 0.5;
            ctx.stroke();
            ctx.restore();

            // Eye
            var pulse = 1 + 0.15*Math.sin(time*2.5) + enveloGlow*0.4;
            var er = 12*pulse;
            ctx.beginPath(); ctx.arc(n.x,n.y-8,er,0,Math.PI*2);
            var eg = ctx.createRadialGradient(n.x,n.y-8,0,n.x,n.y-8,er);
            eg.addColorStop(0,'#e8e0ff');eg.addColorStop(0.5,'#c4b8e8');eg.addColorStop(1,'#7B6BAA');
            ctx.fillStyle=eg;
            ctx.fill();
          } else if (label==='GATE') {
            // Animated gate
            gateAngle += (gateTarget - gateAngle) * 0.08;
            ctx.save();
            ctx.translate(n.x, n.y-6);
            // Gate housing
            ctx.beginPath();ctx.arc(0,0,11,0,Math.PI*2);
            ctx.strokeStyle='rgba(255,255,255,0.2)';ctx.lineWidth=1.5;ctx.stroke();
            // Gate bar that rotates
            ctx.rotate(gateAngle);
            ctx.beginPath();ctx.moveTo(0,-10);ctx.lineTo(0,10);
            var gateCol = Math.abs(gateAngle) < 0.1 ? 'rgba(255,255,255,0.15)' :
                         (gateAngle > 0 ? 'rgba(92,214,133,0.5)' : 'rgba(214,92,92,0.5)');
            ctx.strokeStyle=gateCol;ctx.lineWidth=2;ctx.stroke();
            ctx.restore();
          }

          ctx.font = (n.h<=34?9:10)+'px monospace';
          ctx.textAlign='center';
          var tCol = bCol.replace(/[\d.]+\)$/,'0.9)');
          ctx.fillStyle = tCol;
          var ly = n.h<=34 ? n.y+4 : (label==='ENVELO'?n.y+20:label==='GATE'?n.y+n.h/2-6:n.y+n.h/2-4);
          ctx.fillText(label, n.x, ly);

          if (label==='ENVELO') {
            ctx.font='9px sans-serif';ctx.fillStyle='rgba(255,255,255,0.3)';
            ctx.fillText('Interlock',n.x,n.y+n.h/2+14);
          }
        }

        function spawn(ts) {
          var label = dataLabels[Math.floor(Math.random()*dataLabels.length)];
          packets.push({
            state:0, t:0,
            speed: 0.0003 + Math.random()*0.0002,
            decision: Math.random()>0.2?'exec':'block',
            opacity:1, r: 3+Math.random()*1.5,
            trail:[], x:0, y:0,
            label: label,
            labelOpacity: 1,
            spawned: ts
          });
          nextDelay = 1200 + Math.random()*1800;
          lastSpawn = ts;
        }

        function animate(ts) {
          resize();
          var L = layout();
          var cps = getConnPoints(L);
          var time = ts/1000;
          ctx.clearRect(0,0,W,H);

          // Connections with base glow
          drawConn(cps[0], 'rgba(92,214,133,','0.15');
          drawConn(cps[1], 'rgba(157,140,207,','0.12');
          drawConn(cps[2], 'rgba(92,214,133,','0.08');
          drawConn(cps[3], 'rgba(214,92,92,','0.08');

          // Connection pulses
          drawConnPulses(cps, time);

          // Nodes
          drawNode(L.model,'MODEL','rgba(92,214,133,0.2)','rgba(92,214,133,0.06)',time);
          drawNode(L.envelo,'ENVELO','rgba(157,140,207,0.4)','rgba(91,75,138,0.12)',time);
          drawNode(L.gate,'GATE','rgba(255,255,255,0.1)','rgba(255,255,255,0.02)',time);
          drawNode(L.execute,'EXECUTE','rgba(92,214,133,0.25)','rgba(92,214,133,0.08)',time);
          drawNode(L.blocked,'BLOCKED','rgba(214,92,92,0.25)','rgba(214,92,92,0.08)',time);

          // Decay envelo glow
          enveloGlow *= 0.97;

          // Spawn
          if (ts - lastSpawn > nextDelay) spawn(ts);

          // Reset gate when no packets in state 3
          var anyAtGate = false;

          // Update packets
          for (var i=packets.length-1; i>=0; i--) {
            var p = packets[i];
            p.t += p.speed * 16;
            var et = ease(clamp(p.t));
            var px, py, col;

            if (!L.mob) {
              switch(p.state) {
                case 0:
                  px = lerp(L.model.x+L.model.w/2+4, L.envelo.x-L.envelo.w/2-4, et);
                  py = L.model.y;
                  col = 'rgba(92,214,133,';
                  p.labelOpacity = et < 0.8 ? 1 : (1-et)*5;
                  if (p.t>=1){
                    p.t=0;p.state=1;p.speed*=0.3;enveloGlow=1;p.trail=[];
                    p.labelOpacity=0;
                    connPulses.push({conn:0,t:0,speed:0.015,col:'rgba(92,214,133,'});
                  }
                  break;
                case 1:
                  px = L.envelo.x;
                  py = L.envelo.y;
                  col = 'rgba(157,140,207,';
                  p.r = Math.max(p.r*0.985, 1.5);
                  if (p.t>=1){
                    p.t=0;p.state=2;p.speed=0.0008;p.trail=[];p.r=3+Math.random();stats.total++;
                    // No verdict pulse — packet IS the verdict
                  }
                  break;
                case 2:
                  px = lerp(L.envelo.x+L.envelo.w/2+4, L.gate.x-L.gate.w/2-4, et);
                  py = L.envelo.y;
                  col = 'rgba(157,140,207,';
                  if (p.t>=1){p.t=0;p.state=3;p.speed=0.001;p.trail=[];}
                  break;
                case 3:
                  anyAtGate = true;
                  if (p.decision==='exec') {
                    gateTarget = Math.PI/4;
                    px = lerp(L.gate.x+L.gate.w/2+4, L.execute.x-L.execute.w/2-4, et);
                    py = lerp(L.gate.y, L.execute.y, et);
                    col = 'rgba(92,214,133,';
                    
                  } else {
                    gateTarget = -Math.PI/4;
                    px = lerp(L.gate.x+L.gate.w/2+4, L.blocked.x-L.blocked.w/2-4, et);
                    py = lerp(L.gate.y, L.blocked.y, et);
                    col = 'rgba(214,92,92,';
                    
                  }
                  if (p.t>=1){
                    p.state=4;
                    if (p.decision==='exec'){stats.exec++;}
                    else {
                      stats.block++;
                      for(var b=0;b<12;b++) bursts.push({
                        x:px,y:py,
                        vx:(Math.random()-0.5)*6,vy:(Math.random()-0.5)*6,
                        life:1, r:1.5+Math.random()*2
                      });
                    }
                  }
                  break;
                case 4:
                  px=p.x;py=p.y;p.opacity-=0.03;
                  col = p.decision==='exec'?'rgba(92,214,133,':'rgba(214,92,92,';
                  break;
              }
            } else {
              switch(p.state) {
                case 0:
                  px = L.model.x;
                  py = lerp(L.model.y+L.model.h/2+4, L.envelo.y-L.envelo.h/2-4, et);
                  col = 'rgba(92,214,133,';
                  p.labelOpacity = et < 0.8 ? 1 : (1-et)*5;
                  if (p.t>=1){
                    p.t=0;p.state=1;p.speed*=0.3;enveloGlow=1;p.trail=[];
                    p.labelOpacity=0;
                    connPulses.push({conn:0,t:0,speed:0.015,col:'rgba(92,214,133,'});
                  }
                  break;
                case 1:
                  px = L.envelo.x; py = L.envelo.y;
                  col = 'rgba(157,140,207,';
                  p.r = Math.max(p.r*0.985, 1.5);
                  if (p.t>=1){
                    p.t=0;p.state=2;p.speed=0.0008;p.trail=[];p.r=3+Math.random();stats.total++;
                    // No verdict pulse — packet IS the verdict
                  }
                  break;
                case 2:
                  px = L.gate.x;
                  py = lerp(L.envelo.y+L.envelo.h/2+4, L.gate.y-L.gate.h/2-4, et);
                  col = 'rgba(157,140,207,';
                  if (p.t>=1){p.t=0;p.state=3;p.speed=0.001;p.trail=[];}
                  break;
                case 3:
                  anyAtGate = true;
                  if (p.decision==='exec') {
                    gateTarget = Math.PI/4;
                    px = lerp(L.gate.x, L.execute.x, et);
                    py = lerp(L.gate.y+L.gate.h/2+4, L.execute.y-L.execute.h/2-4, et);
                    col = 'rgba(92,214,133,';
                  } else {
                    gateTarget = -Math.PI/4;
                    px = lerp(L.gate.x, L.blocked.x, et);
                    py = lerp(L.gate.y+L.gate.h/2+4, L.blocked.y-L.blocked.h/2-4, et);
                    col = 'rgba(214,92,92,';
                  }
                  if (p.t>=1){
                    p.state=4;
                    if (p.decision==='exec'){stats.exec++;}
                    else {
                      stats.block++;
                      for(var b=0;b<12;b++) bursts.push({
                        x:px,y:py,
                        vx:(Math.random()-0.5)*6,vy:(Math.random()-0.5)*6,
                        life:1, r:1.5+Math.random()*2
                      });
                    }
                  }
                  break;
                case 4:
                  px=p.x;py=p.y;p.opacity-=0.03;
                  col = p.decision==='exec'?'rgba(92,214,133,':'rgba(214,92,92,';
                  break;
              }
            }

            p.x=px; p.y=py;

            // Trail
            p.trail.push({x:px,y:py});
            if(p.trail.length>6) p.trail.shift();
            for(var j=0;j<p.trail.length-1;j++){
              var a=(j/p.trail.length)*0.15*p.opacity;
              ctx.beginPath();
              ctx.arc(p.trail[j].x,p.trail[j].y,p.r*(j/p.trail.length)*0.5,0,Math.PI*2);
              ctx.fillStyle=col+a+')';
              ctx.fill();
            }

            // Packet dot (hide during ENVELO processing)
            if (p.state===1) { p.trail=[]; }
            if (p.state!==1) {
            ctx.beginPath();
            ctx.arc(px,py,p.r,0,Math.PI*2);
            ctx.fillStyle=col+(0.9*p.opacity)+')';
            
            
            ctx.fill();
            ctx.shadowBlur=0;

            }
            // Data label (only during state 0 travel)
            if (p.state===0 && p.labelOpacity>0.05) {
              ctx.font = '8px monospace';
              ctx.textAlign = 'left';
              ctx.fillStyle = 'rgba(92,214,133,'+(0.6*p.labelOpacity*p.opacity)+')';
              ctx.fillText(p.label, px+8, py+12);
            }

            if (p.opacity<=0) packets.splice(i,1);
          }

          // Reset gate when idle
          if (!anyAtGate) gateTarget = 0;

          // Burst particles
          for (var i=bursts.length-1;i>=0;i--){
            var b=bursts[i];
            b.x+=b.vx; b.y+=b.vy;
            b.vx*=0.91; b.vy*=0.91;
            b.life-=0.022;
            if(b.life<=0){bursts.splice(i,1);continue;}
            ctx.beginPath();
            ctx.arc(b.x,b.y,b.r*b.life,0,Math.PI*2);
            ctx.fillStyle='rgba(214,92,92,'+(b.life*0.9)+')';
            ctx.shadowColor='rgba(214,92,92,0.3)';
            ctx.shadowBlur=4;
            ctx.fill();
            ctx.shadowBlur=0;
          }

          // Audit counter
          ctx.font='9px monospace';
          ctx.textAlign='center';
          ctx.fillStyle='rgba(255,255,255,0.4)';
          var auditY = L.mob ? H-12 : H-10;
          ctx.fillText('AUDIT TRAIL  \u00B7  '+stats.total+' checked  \u00B7  '+stats.exec+' passed  \u00B7  '+stats.block+' blocked', W/2, auditY);

          requestAnimationFrame(animate);
        }

        resize();
        window.addEventListener('resize', function(){ resize(); });
        requestAnimationFrame(animate);
      })();
      </script>

      <!-- Tagline -->
      <div class="reveal" style="text-align: center; margin-bottom: var(--space-4);">
        <p style="font-size: 22px; color: var(--text-primary); max-width: 700px; margin: 0 auto 16px; line-height: 1.5; font-weight: 500;">
          The runtime layer that makes boundaries <span style="color: rgba(92,214,133,0.9);">unbreakable</span>
        </p>
        <p style="font-size: 15px; color: var(--text-secondary); max-width: 600px; margin: 0 auto; line-height: 1.6;">
          Every autonomous action is validated against declared limits before execution. Out-of-bounds? Blocked. No exceptions.
        </p>
      </div>

      <!-- Four Pillars -->
      <div class="reveal" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 16px; margin-bottom: var(--space-3);">
        <div style="background: linear-gradient(135deg, rgba(92,214,133,0.1) 0%, rgba(92,214,133,0.02) 100%); border: 1px solid rgba(92,214,133,0.2); border-radius: 16px; padding: 24px;">
          <div style="width: 44px; height: 44px; border-radius: 12px; background: rgba(92,214,133,0.15); display: flex; align-items: center; justify-content: center; margin-bottom: 16px;">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="rgba(92,214,133,0.95)" stroke-width="1.5"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
          </div>
          <h4 style="font-size: 15px; font-weight: 600; color: var(--text-primary); margin-bottom: 8px;">Non-Bypassable</h4>
          <p style="font-size: 13px; color: var(--text-secondary); line-height: 1.5; margin: 0;">Every action must pass through ENVELO. No backdoors, no overrides, no exceptions.</p>
        </div>
        
        <div style="background: linear-gradient(135deg, rgba(92,214,133,0.1) 0%, rgba(92,214,133,0.02) 100%); border: 1px solid rgba(92,214,133,0.2); border-radius: 16px; padding: 24px;">
          <div style="width: 44px; height: 44px; border-radius: 12px; background: rgba(92,214,133,0.15); display: flex; align-items: center; justify-content: center; margin-bottom: 16px;">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="rgba(92,214,133,0.95)" stroke-width="1.5"><polygon points="12 2 2 7 12 12 22 7 12 2"/><polyline points="2 17 12 22 22 17"/><polyline points="2 12 12 17 22 12"/></svg>
          </div>
          <h4 style="font-size: 15px; font-weight: 600; color: var(--text-primary); margin-bottom: 8px;">Fail-Closed</h4>
          <p style="font-size: 13px; color: var(--text-secondary); line-height: 1.5; margin: 0;">If validation fails or ENVELO errors, the action is blocked. Safe by default.</p>
        </div>
        
        <div style="background: linear-gradient(135deg, rgba(92,214,133,0.1) 0%, rgba(92,214,133,0.02) 100%); border: 1px solid rgba(92,214,133,0.2); border-radius: 16px; padding: 24px;">
          <div style="width: 44px; height: 44px; border-radius: 12px; background: rgba(92,214,133,0.15); display: flex; align-items: center; justify-content: center; margin-bottom: 16px;">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="rgba(92,214,133,0.95)" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          </div>
          <h4 style="font-size: 15px; font-weight: 600; color: var(--text-primary); margin-bottom: 8px;">Real-Time</h4>
          <p style="font-size: 13px; color: var(--text-secondary); line-height: 1.5; margin: 0;">Validation happens at execution time. No stale checks, no delayed enforcement.</p>
        </div>
        
        <div style="background: linear-gradient(135deg, rgba(92,214,133,0.1) 0%, rgba(92,214,133,0.02) 100%); border: 1px solid rgba(92,214,133,0.2); border-radius: 16px; padding: 24px;">
          <div style="width: 44px; height: 44px; border-radius: 12px; background: rgba(92,214,133,0.15); display: flex; align-items: center; justify-content: center; margin-bottom: 16px;">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="rgba(92,214,133,0.95)" stroke-width="1.5"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/></svg>
          </div>
          <h4 style="font-size: 15px; font-weight: 600; color: var(--text-primary); margin-bottom: 8px;">Tamper-Evident</h4>
          <p style="font-size: 13px; color: var(--text-secondary); line-height: 1.5; margin: 0;">Every check is logged with cryptographic signatures. Full audit trail.</p>
        </div>
      </div>
      <!-- Bottom callout -->
      <div class="reveal" style="text-align: center;">
        <div style="display: inline-flex; align-items: center; gap: 12px; padding: 16px 32px; background: rgba(92,214,133,0.06); border: 1px solid rgba(92,214,133,0.2); border-radius: 50px;">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="rgba(92,214,133,0.8)" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>
          <span style="font-size: 13px; color: var(--text-secondary);">ENVELO is a <span style="color: rgba(92,214,133,0.9); font-weight: 500;">requirement specification</span>, not proprietary software</span>
        </div>
      </div>
    </section>
    <section id="security" class="section">
      <div class="section-head reveal">
        <div>
          <span class="section-label">SECURITY ARCHITECTURE</span>
          <h2 class="section-title">Zero Trust, Zero Access</h2>
          <p class="section-lead">
            Enterprise security teams ask: "Is this agent a backdoor?" The answer is <strong>architecturally impossible</strong>.
          </p>
        </div>
      </div>

      <!-- Security Data Flow Diagram - Canvas -->
      <div class="reveal" style="display: flex; justify-content: center; margin-bottom: 40px;">
        <div style="width: 100%; max-width: 880px;">
          <canvas id="security-canvas" style="width: 100%; display: block;"></canvas>
        </div>
      </div>
      <script>
      (function() {
        var c = document.getElementById('security-canvas');
        if (!c) return;
        var ctx = c.getContext('2d');
        var dpr = window.devicePixelRatio || 1;
        var W = 0, H = 0;
        var outPackets = [];
        var inPackets = [];
        var bursts = [];
        var stats = { out: 0, rejected: 0 };
        var lastOutSpawn = 0;
        var lastInSpawn = 0;
        var nextOutDelay = 1500;
        var nextInDelay = 4000;
        var shieldFlash = 0;
        var enveloGlow = 0;
        var bannerFlash = 0;

        var telemetryLabels = [
          'heartbeat', 'log_hash', 'cert_check', 'status_ok',
          'audit_sync', 'config_ack', 'uptime: 99.7%', 'drift: 0.00',
          'sig_valid', 'boundary_ok', 'tls_1.3', 'pin_match'
        ];

        var attackLabels = [
          'SSH:22', 'RDP:3389', 'CMD:exec', 'PORT:scan',
          'API:inject', 'ROOT:sudo', 'SHELL:rev', 'FTP:21'
        ];

        function resize() {
          var r = c.parentElement.getBoundingClientRect();
          W = r.width;
          H = W < 550 ? 380 : 300;
          c.width = W * dpr;
          c.height = H * dpr;
          c.style.height = H + 'px';
          ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
        }

        function rr(x, y, w, h, r) {
          ctx.beginPath();
          ctx.moveTo(x+r,y);
          ctx.arcTo(x+w,y,x+w,y+h,r);
          ctx.arcTo(x+w,y+h,x,y+h,r);
          ctx.arcTo(x,y+h,x,y,r);
          ctx.arcTo(x,y,x+w,y,r);
          ctx.closePath();
        }

        function lerp(a,b,t) { return a+(b-a)*t; }
        function ease(t) { return t<0.5?2*t*t:-1+(4-2*t)*t; }
        function clamp(t) { return Math.min(Math.max(t,0),1); }

        function layout() {
          var mob = W < 550;
          if (mob) {
            var cx = W / 2;
            return {
              model:    {x:cx, y:55,  w:90, h:90},
              envelo:   {x:cx, y:165, w:120,h:120},
              sentinel: {x:cx, y:290, w:90, h:90},
              mob: true
            };
          }
          var cy = H/2 - 10;
          var m = W*0.08;
          var s = (W - m*2) / 3;
          return {
            model:    {x:m+s*0.5, y:cy, w:100, h:100},
            envelo:   {x:m+s*1.5, y:cy, w:130, h:130},
            sentinel: {x:m+s*2.5, y:cy, w:100, h:100},
            mob: false
          };
        }

        function getConns(L) {
          if (!L.mob) {
            return [
              {ax:L.model.x+L.model.w/2, ay:L.model.y, bx:L.envelo.x-L.envelo.w/2, by:L.envelo.y, label:'REQUEST'},
              {ax:L.envelo.x+L.envelo.w/2, ay:L.envelo.y, bx:L.sentinel.x-L.sentinel.w/2, by:L.sentinel.y, label:'TELEMETRY'}
            ];
          }
          return [
            {ax:L.model.x, ay:L.model.y+L.model.h/2, bx:L.envelo.x, by:L.envelo.y-L.envelo.h/2, label:'REQUEST'},
            {ax:L.envelo.x, ay:L.envelo.y+L.envelo.h/2, bx:L.sentinel.x, by:L.sentinel.y-L.sentinel.h/2, label:'TELEMETRY'}
          ];
        }

        function drawConn(cp, col, alpha) {
          ctx.beginPath();
          ctx.moveTo(cp.ax,cp.ay); ctx.lineTo(cp.bx,cp.by);
          ctx.strokeStyle = col+alpha+')';
          ctx.lineWidth = 1.5;
          ctx.stroke();
          // Arrow
          var ang = Math.atan2(cp.by-cp.ay,cp.bx-cp.ax);
          ctx.beginPath();
          ctx.moveTo(cp.bx,cp.by);
          ctx.lineTo(cp.bx-6*Math.cos(ang-0.4),cp.by-6*Math.sin(ang-0.4));
          ctx.lineTo(cp.bx-6*Math.cos(ang+0.4),cp.by-6*Math.sin(ang+0.4));
          ctx.closePath();
          ctx.fillStyle = col+(Math.min(parseFloat(alpha)*3,0.5))+')';
          ctx.fill();
          // Label
          if (cp.label) {
            var mx=(cp.ax+cp.bx)/2, my=(cp.ay+cp.by)/2-12;
            ctx.font = '8px monospace';
            ctx.textAlign = 'center';
            ctx.fillStyle = col+'0.4)';
            ctx.fillText(cp.label, mx, my);
          }
        }

        function drawNode(n, label, bCol, fCol, time) {
          var x=n.x-n.w/2, y=n.y-n.h/2;
          
          // Shield effect on ENVELO
          if (label==='ENVELO' && shieldFlash > 0.05) {
            ctx.save();
            ctx.beginPath();
            rr(x-4,y-4,n.w+8,n.h+8,14);
            ctx.strokeStyle = 'rgba(214,92,92,'+(shieldFlash*0.5)+')';
            ctx.lineWidth = 2;
            ctx.stroke();
            // Second ring
            ctx.beginPath();
            rr(x-8,y-8,n.w+16,n.h+16,18);
            ctx.strokeStyle = 'rgba(214,92,92,'+(shieldFlash*0.2)+')';
            ctx.lineWidth = 1;
            ctx.stroke();
            ctx.restore();
          }

          rr(x,y,n.w,n.h,10);
          ctx.fillStyle = fCol;
          ctx.fill();
          ctx.strokeStyle = bCol;
          ctx.lineWidth = label==='ENVELO'?2:1;
          ctx.stroke();

          if (label==='MODEL') {
            var s=8,g=3,ox=n.x-(s+g/2),oy=n.y-22;
            for(var r=0;r<2;r++) for(var cc=0;cc<2;cc++){
              rr(ox+cc*(s+g),oy+r*(s+g),s,s,2);
              ctx.strokeStyle='rgba(92,214,133,0.5)';ctx.lineWidth=1;ctx.stroke();
            }
          } else if (label==='ENVELO') {
            // Scan lines - always subtly visible, brighter during processing
            var scanAlpha = 0.06 + enveloGlow*0.12;
            var bandAlpha = 0.025 + enveloGlow*0.04;
            ctx.save();
            ctx.beginPath();
            rr(x+2,y+2,n.w-4,n.h-4,8);
            ctx.clip();
            var scanY = n.y - n.h/2 + (time*40 % n.h);
            ctx.beginPath();
            ctx.moveTo(x+8, scanY);
            ctx.lineTo(x+n.w-8, scanY);
            ctx.strokeStyle = 'rgba(157,140,207,'+scanAlpha+')';
            ctx.lineWidth = 1;
            ctx.stroke();
            var sg = ctx.createLinearGradient(x,scanY-8,x,scanY+8);
            sg.addColorStop(0,'rgba(157,140,207,0)');
            sg.addColorStop(0.5,'rgba(157,140,207,'+bandAlpha+')');
            sg.addColorStop(1,'rgba(157,140,207,0)');
            ctx.fillStyle = sg;
            ctx.fillRect(x+4,scanY-8,n.w-8,16);
            var scanY2 = n.y - n.h/2 + ((time*40+n.h/2) % n.h);
            ctx.beginPath();
            ctx.moveTo(x+8, scanY2);
            ctx.lineTo(x+n.w-8, scanY2);
            ctx.strokeStyle = 'rgba(157,140,207,'+(scanAlpha*0.5)+')';
            ctx.lineWidth = 0.5;
            ctx.stroke();
            ctx.restore();

            // Eye
            var pulse = 1 + 0.15*Math.sin(time*2.5) + enveloGlow*0.4;
            var er = 12*pulse;
            ctx.beginPath(); ctx.arc(n.x,n.y-8,er,0,Math.PI*2);
            var eg = ctx.createRadialGradient(n.x,n.y-8,0,n.x,n.y-8,er);
            eg.addColorStop(0,'#e8e0ff');eg.addColorStop(0.5,'#c4b8e8');eg.addColorStop(1,'#7B6BAA');
            ctx.fillStyle=eg;
            ctx.fill();

          } else if (label==='SENTINEL') {
            // Database icon
            ctx.beginPath();
            ctx.ellipse(n.x, n.y-16, 18, 6, 0, 0, Math.PI*2);
            ctx.strokeStyle='rgba(157,140,207,0.5)';ctx.lineWidth=1;ctx.stroke();
            ctx.beginPath();
            ctx.moveTo(n.x-18,n.y-16);ctx.lineTo(n.x-18,n.y);
            ctx.strokeStyle='rgba(157,140,207,0.3)';ctx.stroke();
            ctx.beginPath();
            ctx.moveTo(n.x+18,n.y-16);ctx.lineTo(n.x+18,n.y);
            ctx.stroke();
            ctx.beginPath();
            ctx.ellipse(n.x, n.y, 18, 6, 0, 0, Math.PI);
            ctx.strokeStyle='rgba(157,140,207,0.5)';ctx.stroke();
          }

          // Label
          ctx.font = (label==='ENVELO'?11:10)+'px monospace';
          ctx.textAlign='center';
          var tCol = bCol.replace(/[\d.]+\)$/,'0.9)');
          ctx.fillStyle = tCol;
          var ly = label==='ENVELO' ? n.y+20 : (label==='SENTINEL' ? n.y+18 : n.y+n.h/2-4);
          ctx.fillText(label, n.x, ly);

          // Sub-labels
          ctx.font='9px sans-serif';ctx.fillStyle='rgba(255,255,255,0.3)';
          if (label==='MODEL') ctx.fillText('Autonomous System', n.x, n.y+n.h/2+16);
          if (label==='ENVELO') {
            ctx.fillText('Enforcement Agent', n.x, n.y+n.h/2+14);
          }
          if (label==='SENTINEL') ctx.fillText('Authority Registry', n.x, n.y+n.h/2+16);
        }

        function spawnOut(ts) {
          var label = telemetryLabels[Math.floor(Math.random()*telemetryLabels.length)];
          outPackets.push({
            state:0, t:0,
            speed: 0.0003 + Math.random()*0.0002,
            opacity:1, r:3+Math.random()*1.5,
            trail:[], x:0, y:0,
            label: label, labelOpacity:1
          });
          nextOutDelay = 1200 + Math.random()*1800;
          lastOutSpawn = ts;
        }

        function spawnIn(ts) {
          var label = attackLabels[Math.floor(Math.random()*attackLabels.length)];
          inPackets.push({
            t: 0,
            speed: 0.0002 + Math.random()*0.0001,
            opacity: 1, r: 3+Math.random()*1.5,
            trail: [], x:0, y:0,
            label: label, rejected: false
          });
          nextInDelay = 3500 + Math.random()*4000;
          lastInSpawn = ts;
        }

        function animate(ts) {
          resize();
          var L = layout();
          var conns = getConns(L);
          var time = ts/1000;
          ctx.clearRect(0,0,W,H);

          // Draw connections (one-way arrows)
          drawConn(conns[0], 'rgba(92,214,133,','0.12');
          drawConn(conns[1], 'rgba(157,140,207,','0.12');

          // Draw nodes
          drawNode(L.model,'MODEL','rgba(92,214,133,0.2)','rgba(92,214,133,0.06)',time);
          drawNode(L.envelo,'ENVELO','rgba(157,140,207,0.4)','rgba(91,75,138,0.12)',time);
          drawNode(L.sentinel,'SENTINEL','rgba(157,140,207,0.2)','rgba(157,140,207,0.06)',time);

          // Decay effects
          shieldFlash *= 0.96;
          enveloGlow *= 0.97;
          bannerFlash *= 0.98;

          // Spawn outbound
          if (ts - lastOutSpawn > nextOutDelay) spawnOut(ts);
          // Spawn inbound attack
          if (ts - lastInSpawn > nextInDelay) spawnIn(ts);

          // --- Outbound packets (legitimate flow) ---
          for (var i=outPackets.length-1; i>=0; i--) {
            var p = outPackets[i];
            p.t += p.speed * 16;
            var et = ease(clamp(p.t));
            var px, py, col;

            if (!L.mob) {
              if (p.state===0) {
                px = lerp(L.model.x+L.model.w/2+4, L.envelo.x-L.envelo.w/2-4, et);
                py = L.model.y;
                col = 'rgba(92,214,133,';
                p.labelOpacity = et < 0.7 ? 1 : (1-et)*3.3;
                if (p.t>=1) { p.t=0; p.state=1; p.speed*=0.35; p.trail=[]; p.labelOpacity=0; enveloGlow=1; }
              } else if (p.state===1) {
                px = L.envelo.x;
                py = L.envelo.y;
                col = 'rgba(157,140,207,';
                p.r = Math.max(p.r*0.985, 1.5);
                if (p.t>=1) { p.t=0; p.state=2; p.speed=0.0006; p.trail=[]; p.r=3+Math.random(); stats.out++; }
              } else if (p.state===2) {
                px = lerp(L.envelo.x+L.envelo.w/2+4, L.sentinel.x-L.sentinel.w/2-4, et);
                py = L.envelo.y;
                col = 'rgba(157,140,207,';
                if (p.t>=1) { p.state=3; }
              } else {
                px=p.x; py=p.y; p.opacity-=0.04;
                col='rgba(157,140,207,';
              }
            } else {
              if (p.state===0) {
                px = L.model.x;
                py = lerp(L.model.y+L.model.h/2+4, L.envelo.y-L.envelo.h/2-4, et);
                col = 'rgba(92,214,133,';
                p.labelOpacity = et < 0.7 ? 1 : (1-et)*3.3;
                if (p.t>=1) { p.t=0; p.state=1; p.speed*=0.35; p.trail=[]; p.labelOpacity=0; enveloGlow=1; }
              } else if (p.state===1) {
                px = L.envelo.x;
                py = L.envelo.y;
                col = 'rgba(157,140,207,';
                p.r = Math.max(p.r*0.985, 1.5);
                if (p.t>=1) { p.t=0; p.state=2; p.speed=0.0006; p.trail=[]; p.r=3+Math.random(); stats.out++; }
              } else if (p.state===2) {
                px = L.envelo.x;
                py = lerp(L.envelo.y+L.envelo.h/2+4, L.sentinel.y-L.sentinel.h/2-4, et);
                col = 'rgba(157,140,207,';
                if (p.t>=1) { p.state=3; }
              } else {
                px=p.x; py=p.y; p.opacity-=0.04;
                col='rgba(157,140,207,';
              }
            }

            p.x=px; p.y=py;

            // Trail
            p.trail.push({x:px,y:py});
            if(p.trail.length>6) p.trail.shift();
            for(var j=0;j<p.trail.length-1;j++){
              var a=(j/p.trail.length)*0.25*p.opacity;
              ctx.beginPath();
              ctx.arc(p.trail[j].x,p.trail[j].y,p.r*(j/p.trail.length)*0.5,0,Math.PI*2);
              ctx.fillStyle=col+a+')';
              ctx.fill();
            }

            // Dot (hide during ENVELO processing)
            if (p.state!==1) {
            ctx.beginPath();
            ctx.arc(px,py,p.r,0,Math.PI*2);
            ctx.fillStyle=col+(0.9*p.opacity)+')';
            ctx.fill();
            }

            // Label
            if (p.state===0 && p.labelOpacity>0.05) {
              ctx.font = '8px monospace';
              ctx.textAlign = 'left';
              ctx.fillStyle = 'rgba(92,214,133,'+(0.6*p.labelOpacity*p.opacity)+')';
              ctx.fillText(p.label, px+8, py+12);
            }

            if (p.opacity<=0) outPackets.splice(i,1);
          }

          // --- Inbound attack packets (rejected) ---
          for (var i=inPackets.length-1; i>=0; i--) {
            var p = inPackets[i];
            p.t += p.speed * 16;
            var et = ease(clamp(p.t));
            var px, py;

            // Approach ENVELO from the right (or bottom on mobile)
            var wallX, wallY;
            if (!L.mob) {
              wallX = L.envelo.x + L.envelo.w/2 + 6;
              wallY = L.envelo.y;
              var startX = W;
              var startY = L.envelo.y + (Math.sin(i*2.7)*20);
              px = lerp(startX, wallX, et);
              py = lerp(startY, wallY, et);
            } else {
              wallX = L.envelo.x;
              wallY = L.envelo.y + L.envelo.h/2 + 6;
              var startX = L.envelo.x + (Math.sin(i*2.7)*20);
              var startY = H;
              px = lerp(startX, wallX, et);
              py = lerp(startY, wallY, et);
            }

            p.x = px; p.y = py;

            if (!p.rejected) {
              // Trail
              p.trail.push({x:px,y:py});
              if(p.trail.length>6) p.trail.shift();
              for(var j=0;j<p.trail.length-1;j++){
                var a=(j/p.trail.length)*0.2*p.opacity;
                ctx.beginPath();
                ctx.arc(p.trail[j].x,p.trail[j].y,p.r*(j/p.trail.length)*0.5,0,Math.PI*2);
                ctx.fillStyle='rgba(214,92,92,'+a+')';
                ctx.fill();
              }

              // Red dot
              ctx.beginPath();
              ctx.arc(px,py,p.r,0,Math.PI*2);
              ctx.fillStyle='rgba(214,92,92,'+(0.8*p.opacity)+')';
              ctx.shadowColor='rgba(214,92,92,0.4)';
              ctx.shadowBlur=10;
              ctx.fill();
              ctx.shadowBlur=0;

              // Attack label
              if (p.opacity > 0.3) {
                ctx.font = '7px monospace';
                ctx.textAlign = 'right';
                ctx.fillStyle = 'rgba(214,92,92,'+(0.5*p.opacity)+')';
                if (!L.mob) {
                  ctx.fillText(p.label, px-8, py+12);
                } else {
                  ctx.textAlign = 'left';
                  ctx.fillText(p.label, px+8, py+12);
                }
              }

              // Hit the wall
              if (p.t >= 0.85) {
                p.rejected = true;
                shieldFlash = 1;
                bannerFlash = 1;
                stats.rejected++;
                // Burst
                for(var b=0;b<14;b++) {
                  var angle = Math.random()*Math.PI*2;
                  var spd = 2 + Math.random()*4;
                  bursts.push({
                    x:px, y:py,
                    vx: Math.cos(angle)*spd * (L.mob ? 1 : 1),
                    vy: Math.sin(angle)*spd,
                    life:1, r:1+Math.random()*2, col:'red'
                  });
                }
              }
            } else {
              p.opacity -= 0.05;
            }

            if (p.opacity<=0) inPackets.splice(i,1);
          }

          // --- Burst particles ---
          for (var i=bursts.length-1;i>=0;i--){
            var b=bursts[i];
            b.x+=b.vx; b.y+=b.vy;
            b.vx*=0.9; b.vy*=0.9;
            b.life-=0.025;
            if(b.life<=0){bursts.splice(i,1);continue;}
            ctx.beginPath();
            ctx.arc(b.x,b.y,b.r*b.life,0,Math.PI*2);
            ctx.fillStyle='rgba(214,92,92,'+(b.life*0.8)+')';
            ctx.shadowColor='rgba(214,92,92,0.3)';
            ctx.shadowBlur=4;
            ctx.fill();
            ctx.shadowBlur=0;
          }

          // --- No Inbound Banner (flashes on rejection) ---
          var bannerAlpha = 0.15 + bannerFlash * 0.6;
          ctx.font = '9px monospace';
          ctx.textAlign = 'center';
          ctx.letterSpacing = '2px';
          
          // Banner background pill
          var bannerText = 'NO INBOUND ACCESS \u2014 ONE-WAY DATA FLOW ONLY';
          var bannerY = L.mob ? H-14 : H-12;
          var tw = ctx.measureText(bannerText).width;
          rr(W/2-tw/2-12, bannerY-10, tw+24, 18, 9);
          ctx.fillStyle = 'rgba(214,92,92,'+(bannerAlpha*0.08)+')';
          ctx.fill();
          ctx.strokeStyle = 'rgba(214,92,92,'+(bannerAlpha*0.3)+')';
          ctx.lineWidth = 0.5;
          ctx.stroke();

          // X icon
          var iconX = W/2-tw/2-2;
          ctx.beginPath();
          ctx.moveTo(iconX-4,bannerY-4); ctx.lineTo(iconX+2,bannerY+2);
          ctx.moveTo(iconX+2,bannerY-4); ctx.lineTo(iconX-4,bannerY+2);
          ctx.strokeStyle='rgba(214,92,92,'+(bannerAlpha*0.9)+')';
          ctx.lineWidth=1.2;
          ctx.stroke();

          // Text
          ctx.fillStyle = 'rgba(214,92,92,'+(bannerAlpha*0.9)+')';
          ctx.fillText(bannerText, W/2+6, bannerY+1);

          // --- Status line ---
          ctx.font='9px monospace';
          ctx.fillStyle='rgba(255,255,255,0.2)';
          var statusY = L.mob ? H-32 : H-30;
          ctx.fillText(stats.out+' telemetry sent  \u00B7  '+stats.rejected+' inbound rejected', W/2, statusY);

          requestAnimationFrame(animate);
        }

        resize();
        window.addEventListener('resize', function(){ resize(); });
        requestAnimationFrame(animate);
      })();
      </script>

      

