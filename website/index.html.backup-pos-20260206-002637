              keyTimes="0;0.10;0.14;0.24;0.28;0.40;0.44;0.56;0.60;0.70;0.74;0.84;0.85;1"
              dur="14s" repeatCount="indefinite"/>
          </circle>
          <circle r="12" fill="none" stroke="rgba(157,140,207,0.3)" stroke-width="1" id="proc-dot-ring">
            <animate attributeName="cx"
              values="100;270;270;440;440;610;610;780;780;900;900;900;100;100"
              keyTimes="0;0.10;0.14;0.24;0.28;0.40;0.44;0.56;0.60;0.70;0.74;0.84;0.85;1"
              dur="14s" calcMode="spline"
              keySplines="0.25 0.1 0.25 1;0.5 0 0.5 1;0.25 0.1 0.25 1;0.5 0 0.5 1;0.25 0.1 0.25 1;0.5 0 0.5 1;0.25 0.1 0.25 1;0.5 0 0.5 1;0.25 0.1 0.25 1;0.5 0 0.5 1;0.5 0 0.5 1;0.5 0 0.5 1;0.5 0 0.5 1"
              repeatCount="indefinite"/>
            <animate attributeName="cy" values="100" dur="14s" repeatCount="indefinite"/>
