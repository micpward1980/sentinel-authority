<script>
(function(){
  var checked=0,passed=0,blocked=0;
  function tick(){
    checked++;
    if(Math.random()<0.78) passed++; else blocked++;
    var ec=document.getElementById('e-checked');
    var ep=document.getElementById('e-passed');
    var eb=document.getElementById('e-blocked');
    if(ec) ec.textContent=checked+' CHECKED';
    if(ep) ep.textContent=passed+' PASSED';
    if(eb) eb.textContent=blocked+' BLOCKED';
    setTimeout(tick, 1800+Math.random()*2400);
  }
  setTimeout(tick, 2000);
})();
</script>
