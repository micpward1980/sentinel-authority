# Sentinel Authority Platform Environment Variables
# Copy this file to .env and fill in the values

# Database
DB_PASSWORD=sentinel_dev_password
DATABASE_URL=postgresql+asyncpg://sentinel:sentinel_dev_password@localhost:5432/sentinel_authority

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (CHANGE IN PRODUCTION)
SECRET_KEY=change-me-to-a-secure-random-string-in-production

# Environment
ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cryptographic Signing
SIGNING_KEY_PATH=/etc/sentinel/keys/signing_key.pem
SIGNING_KEY_ID=SA-KEY-2026-001

# Storage (S3/MinIO)
S3_BUCKET=sentinel-authority-evidence
S3_REGION=us-east-1
# S3_ENDPOINT=http://localhost:9000  # For MinIO

# Email (Optional)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# EMAIL_FROM=noreply@sentinelauthority.org

# Stripe (Optional - for billing)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Feature Flags
ENABLE_TELEMETRY_INGESTION=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_EMAIL_NOTIFICATIONS=false
